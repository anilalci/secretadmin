<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
	<name>System - Secret Admin</name>
	<author>ANIL ALCI</author>
	<copyright>ANIL ALCI</copyright>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<creationDate>2019-03-15</creationDate>
	<authorEmail>anilalci111@gmail.com</authorEmail>
	<authorUrl>www.linkedin.com/in/anilalci</authorUrl>
	<version>1.3</version>
	<description>Provides the administrator page hidden.</description>
	<files>
		<folder>layouts</folder>
		<filename plugin="secretadmin">secretadmin.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="folder"
					type="text"
					label="Secret Folder"
					default="secretadmin"
				/>
				<field
					name="httpcode"
					type="number"
					label="Http Code"
					default="404"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
